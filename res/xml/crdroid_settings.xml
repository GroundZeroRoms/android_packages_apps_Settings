	<PreferenceScreen
        android:key="screen_and_animations"
        android:fragment="com.android.settings.crdroid.ScreenAndAnimations"
        android:title="@string/screen_and_animations_title" />

    <PreferenceScreen
        android:key="sound_settings"
        android:fragment="com.android.settings.crdroid.SoundSettings"
