<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/crdroid_settings_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
   <!-- Trying Something -->
    <PreferenceScreen android:key="the_void"
                      android:layout="@layout/the_void" />	

	<PreferenceScreen
        android:key="general_settings"
        android:fragment="com.android.settings.crdroid.GeneralSettings"
        android:title="@string/general_settings_title" />				 
		
	<PreferenceScreen
        android:key="status_bar"
        android:fragment="com.android.settings.crdroid.StatusBar"
        android:title="@string/status_bar_title" />

     <PreferenceScreen
	    android:key="navbar_settings"
        android:fragment="com.android.settings.crdroid.NavigationSettings"
        android:title="@string/navigation_settings_title" />
	
	<PreferenceScreen
        android:key="notification_drawer"
        android:fragment="com.android.settings.crdroid.NotificationDrawer"
        android:title="@string/notification_drawer_title" />

    <PreferenceScreen
